@model FSBModel.Shift

@{
    ViewBag.Title = "Edit";
    ViewBag.Heading = "Shift - Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div>
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ShiftId)
    @Html.HiddenFor(model => model.PlantId)

    <div class="form-group">
        @Html.LabelFor(model => model.Plant.Company.Country.CountryName)
        @Html.DisplayFor(model => model.Plant.Company.Country.CountryName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Plant.Company.CompanyName)
        @Html.DisplayFor(model => model.Plant.Company.CompanyName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Plant.PlantName)
        @Html.DisplayFor(model => model.Plant.PlantName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShiftName)

        @Html.EditorFor(model => model.ShiftName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ShiftName, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShiftStartTime)

        @Html.EditorFor(model => model.ShiftStartTime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ShiftStartTime, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShiftEndTime)

        @Html.EditorFor(model => model.ShiftEndTime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ShiftEndTime, "", new { @class = "text-danger" })

    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.Status, new { @class = "float-left" })

        <div class="checkbox float-left ml-3">
            @Html.EditorFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>

    </div>

    <button type="submit" class="btn btn-primary hvr-float ripple text-uppercase font-weight-bold w-100 mt-2">Save</button>
</div>
}

<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", "", new { @class = "redLink" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
