@model FSBModel.Component

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        <h4>Component</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ComponentId)

        <div class="form-group">
				@Html.LabelFor(model => model.ComponentName)

                @Html.EditorFor(model => model.ComponentName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ComponentName, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "float-left" })

                <div class="checkbox float-left ml-3">
                    @Html.EditorFor(model => model.Status)
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ModuleId, "ModuleId")

                @Html.DropDownList("ModuleId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ModuleId, "", new { @class = "text-danger" })
            
        </div>

        <button type="submit" class="btn btn-primary hvr-float ripple text-uppercase font-weight-bold w-100 mt-2">Save</button>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", "", new { @class = "redLink" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
