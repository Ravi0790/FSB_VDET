@model FSBModel.Part

@{
    ViewBag.Title = "Edit";
    ViewBag.Heading = "Part - Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PartId)
        @Html.HiddenFor(model => model.ComponentId)


        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.Machine.Location.UserType.Plant.Company.Country.CountryName)
            @Html.DisplayFor(model => model.Component.Module.Machine.Location.UserType.Plant.Company.Country.CountryName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.Machine.Location.UserType.Plant.Company.CompanyName)
            @Html.DisplayFor(model => model.Component.Module.Machine.Location.UserType.Plant.Company.CompanyName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.Machine.Location.UserType.Plant.PlantName)
            @Html.DisplayFor(model => model.Component.Module.Machine.Location.UserType.Plant.PlantName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.Machine.Location.UserType.UserTypeName)
            @Html.DisplayFor(model => model.Component.Module.Machine.Location.UserType.UserTypeName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.Machine.Location.Line.LineName)
            @Html.DisplayFor(model => model.Component.Module.Machine.Location.Line.LineName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.Machine.Location.LocationName)

            @Html.DisplayFor(model => model.Component.Module.Machine.Location.LocationName)

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.Module.ModuleName)

            @Html.DisplayFor(model => model.Component.Module.ModuleName)

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Component.ComponentName)

            @Html.DisplayFor(model => model.Component.ComponentName)

        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.PartName)

            @Html.EditorFor(model => model.PartName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PartName, "", new { @class = "text-danger" })

        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "float-left" })

            <div class="checkbox float-left ml-3">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>

        </div>


    </div>

    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary hvr-float ripple text-uppercase font-weight-bold mt-2 mr-5">Save</button> @Html.ActionLink("Back to List", "Index", "", new { @class = "redLink" })
    </div>
}



@section Scripts {

    <script>


        $("#dvwidth").removeClass()
        $("#dvwidth").addClass("col-lg-8 col-md-8 col-sm-12 col-12 mx-auto")
        $("#dvstart").addClass("row");
        $(".form-group").addClass("col-lg-4 col-md-4 col-sm-12 col-12")

    </script>


    @Scripts.Render("~/bundles/jqueryval")
}
