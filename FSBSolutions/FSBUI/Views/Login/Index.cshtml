@model FSBUI.ViewModels.UserLineViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="row">
    <div class="col-12 text-center login-logo p-5 p-sm-2"><a href="/"><img src="img/logo-large.png" alt="FSB"></a></div>
</div>

<div class="row no-gutters">
    <div class="col-lg-4 col-md-6 col-sm-12 col-12 mx-auto">
        <div class="bg-white login-form-box shadow-lg">
            <div class="login-header"><div class="text-center"><span class="fs-regular-20 fs-sm-regular-16 d-block text-uppercase text-white font-weight-bold">Login</span></div></div>

            <div class="p-5 p-sm-4">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model=>model.User.UserName, "test");

                    <div class="form-group">
                        @Html.LabelFor(model => model.User.UserLoginId)
                        @Html.EditorFor(model => model.User.UserLoginId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.User.UserLoginId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.User.UserPassword)
                        @Html.EditorFor(model => model.User.UserPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.User.UserPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Choose Linie")

                        @Html.DropDownListFor(model => model.LineId, null, htmlAttributes: new { @class = "form-control", id = "lineid" })
                    </div>

                    <button type="submit" class="btn btn-primary hvr-float ripple text-uppercase font-weight-bold w-100 mt-2">Login</button>
                }
            </div>

        </div>
    </div>
</div>

<p class="small login-footer text-center mt-4">Powered by <strong><a href="http://www.rkjsolutions.com/" target="_blank">RKJ Solutions</a></strong></p>

@section Scripts {
    

    @Scripts.Render("~/bundles/jqueryval")
}