@model FSBModel.ContainerWaste
@{
    ViewBag.Title = "ContainerWaste";
    ViewBag.Title = "ContainerWaste";
}

<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-lg-8 col-md-8 col-sm-12 col-12 mx-auto" id="dvwidth">
            <div class="bg-white login-form-box shadow-lg mt-5 mb-5">
                <div class="login-header"><div class="text-center"><span class="fs-regular-20 fs-sm-regular-16 d-block text-white text-uppercase font-weight-bold">Container Waste</span></div></div>
                <div class="border-bottom"></div>
                <div class="p-5 p-sm-4">
                    @using (Ajax.BeginForm("Index", new AjaxOptions() { OnSuccess = "fnSuccess", OnFailure = "fnFailure" }))
                    {
                        <div id="dvstart" class="row">
                            <div class="form-group col-lg-6 col-md-4 col-sm-12 col-12">
                                @Html.LabelFor(model => model.Datum)

                                @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control Datepicker" } })
                                @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-6 col-md-4 col-sm-12 col-12">
                                @Html.LabelFor(model => model.LieferscheinNr)

                                @Html.EditorFor(model => model.LieferscheinNr, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LieferscheinNr, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-6 col-md-4 col-sm-12 col-12">
                                @Html.LabelFor(model => model.WasteDetail)
                                @Html.DropDownListFor(model => model.WasteDetail, null, "--Select WasteLine--", htmlAttributes: new { @class = "form-control", id = "wastedetail" })
                                @Html.ValidationMessageFor(model => model.WasteDetail, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-lg-6 col-md-4 col-sm-12 col-12">
                                @Html.LabelFor(model => model.Waste)

                                @Html.EditorFor(model => model.Waste, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Waste, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-primary hvr-float ripple text-uppercase font-weight-bold pl-5 pr-5 plr-sm-4 w-sm-100">Auftrag Speichern</button>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fsbscript")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/fsbui.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(function () {
            $(".Datepicker").datepicker({ maxDate: new Date() });
        });
        $(document).ready(function () {
            $(".Datepicker").datepicker({
                dateFormat: "mm/dd/yy",
                changeMonth: true,
                changeYear: true

            });
        });
    </script>
}